{
  "name": "faucy",
  "license": "MIT",
  "version": "1.0.0",
  "repository": "git@github.com:lndgalante/faucy.git",
  "author": "Leonardo Galante <lndgalante@gmail.com>",
  "devDependencies": {
    "all-contributors-cli": "^6.14.2",
    "npm-run-all": "^4.1.5"
  },
  "scripts": {
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run start",
    "install:backend:deps": "cd backend && npm install",
    "install:frontend:deps": "cd frontend && npm install",
    "install:all:deps": "run-p install:backend:deps install:frontend:deps",
    "dev:all": "run-p dev:backend dev:frontend"
  },
  "dependencies": {
    "husky": "^4.2.5",
    "lint-staged": "^10.2.6"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
